{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": { "@/*": ["resources/js/*"] },

    "jsx": "preserve",
    "types": ["vite/client"],
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["resources/**/*", "env.d.ts"]
}
