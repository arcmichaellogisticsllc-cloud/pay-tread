{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": { "@/*": ["resources/js/*"] },
    "types": ["vite/client"]
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.vue",
    "resources/js/**/*.d.ts",
    "resources/js/env.d.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "vendor"],
  "vueCompilerOptions": {
    "globalTypesPath": "./.volar"
  }
}
